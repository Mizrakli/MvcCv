@using OrnekCV.Models.entity
@model List<TblHobiler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Hobi Sayfası</h2>
<br />
<form  method="post">
    @foreach (var item in Model)
    {
        <label>Açıklama 1</label>
        <textarea rows="5" class="form-control" name="aciklama1">@item.Aciklama1</textarea>
        <label>Açıklama 2</label>
        <textarea rows="5" class="form-control" name="aciklama2">@item.Aciklama2</textarea>

    }
    <br />
    <button class="btn btn-info">Düzenle</button>
</form>