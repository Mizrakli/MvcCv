@using OrnekCV.Models.entity;
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br/>
<h2>Mesaj Sayfası</h2>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)item.Tarih).ToString("dd.MMM.yyyy"))

                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-address-card"></i> @item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.AdSoyad</a> @item.Konu</h3>
                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>
                                            </div>
                                        </div>
                                     }
                                </div>
                              
                                </div>
                               
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        <!-- /.container-fluid -->
    </section>
</body>
</html>